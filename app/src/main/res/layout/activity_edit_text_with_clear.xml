        android:drawableEnd="@drawable/ic_baseline_clear_24"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:hint="EditTextWithClear"
        app:layout_constraintEnd_toEndOf="parent"
